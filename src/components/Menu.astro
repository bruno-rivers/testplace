---
import navData from "../data/routes";
---

<div id="sidebar" class="sidebar">
  <ul class="pages">
    {
      navData.map((item) => (
        <li>
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </ul>
  <ul id="close-btn" class="close-btn">X</ul>
</div>

<style>
  .sidebar {
    background-color: #2c3e50;
    color: white;
    padding: 1rem;
    max-width: fit-content;
    transition: max-width 0.5s ease-in-out;
  }

  .sidebar:hover {
    max-width: 25vw;
    width: 25vw;
  }

  .pages {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .pages li {
    margin-bottom: 10px;
  }

  .pages a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease-in-out;
  }

  .pages a:hover {
    background-color: #34495e;
  }

  .close-btn {
    display: none;
    position: fixed;
    bottom: 20px;
    left: 20px;
    width: 40px;
    height: 30px;
    cursor: pointer;
    z-index: 1;
    font-family: monospace;
    font-weight: bolder;
    display: block;
    font-size: 24px;
    color: #ffffff;
    margin-bottom: 5px;
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .sidebar:hover {
      max-width: fit-content;
    }

    .close-btn {
      display: block;
    }

    .sidebar.active {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      z-index: 10;
    }
  }
</style>


