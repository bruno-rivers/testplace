---
import navData from "../data/routes"
---
<div class="sidebar">
  <ul class="pages">
    {
      navData.map((item) => (
        <li>
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
 
.sidebar {
    background-color: #2c3e50;
    color: white;
    padding: 1rem;
    max-width: fit-content;
    transition: max-width 0.5s ease-in-out;
}

.sidebar:hover {
    max-width: 25vw;
    width: 25vw;
}

.pages {
    list-style: none;
    padding: 0;
    margin: 0;
}

.pages li {
    margin-bottom: 10px;
}

.pages a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease-in-out;
}

.pages a:hover {
    background-color: #34495e;
}

</style>
